<div class="row">

 <div class="col-3">
 </div>

<div class="col-6 text-center border-bottom py-1"> 
     <div class="my-1">
      <%= image_tag tweet.image.variant(resize: '300x500') if tweet.image.attached? %>
     </div>
     <div class="my-1">
      <%= link_to tweet.title, tweet_path(tweet) %>
     </div>
     <div classs="my-1">
      <%= tweet.text %>
     </div>
     <div class="my-1">
      <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          edit
        </button>
        <div class="dropdown-menu text-center">
          <a class="dropdown-item"><%= link_to "edit", edit_tweet_path(tweet) %> </a>
          <a class="dropdown-item"><%= link_to "delete", tweet_path(tweet), method: :delete %> </a>
        </div>
      </div>
     </div>
 </div>
 
 </div class="col-3">
 </div>

  